{
    "$schema": "http://json.schemastore.org/template",
    "author": "Your Name",
    "classifications": [
        "RimWorld",
        "Mod",
        "Game"
    ],
    "identity": "RimWorld.Mod.Template",
    "name": "RimWorld Mod Template",
    "shortName": "rimworldmod",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "RimModTemplate",
    "preferNameDirectory": true,
    "symbols": {
        "name": {
            "type": "parameter",
            "datatype": "string",
            "defaultValue": "MyRimWorldMod",
            "replaces": "RimModTemplate",
            "fileRename": "RimModTemplate",
            "description": "The name of the RimWorld mod"
        },
        "ModAuthor": {
            "type": "parameter",
            "datatype": "string",
            "defaultValue": "YourName",
            "replaces": "YourName",
            "description": "The author of the mod"
        },
        "ModDescription": {
            "type": "parameter",
            "datatype": "string",
            "defaultValue": "A RimWorld mod",
            "replaces": "A template for creating RimWorld mods",
            "description": "Description of the mod"
        },
        "ModVersion": {
            "type": "parameter",
            "datatype": "string",
            "defaultValue": "1.0.0",
            "replaces": "1.0.0",
            "description": "Version of the mod"
        },
        "RimWorldVersion": {
            "type": "parameter",
            "datatype": "string",
            "defaultValue": "1.4",
            "replaces": "1.4",
            "description": "Target RimWorld version"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "exclude": [
                        "**/bin/**",
                        "**/obj/**",
                        "**/.vs/**",
                        "**/.git/**",
                        "**/Assemblies/*.dll",
                        "**/Assemblies/*.pdb"
                    ]
                }
            ]
        }
    ]
}